<node description="MP7 control registers">
	<node id="id"               address="0x00000000" permission="r" description="ID register" tags="slave" >
		<node id="version"      address="0x00000000" mask="0xffffff00" permission="r" parameters="type=version"/>
		<node id="major"        address="0x00000000" mask="0xff000000" permission="r" parameters="type=number"/>
		<node id="minor"        address="0x00000000" mask="0x00ff0000" permission="r" parameters="type=number"/>
		<node id="rev"          address="0x00000000" mask="0x0000ff00" permission="r" parameters="type=number"/>
		<node id="gt_variation" address="0x00000000" mask="0x000000ff" permission="r" parameters="type=number"/>
	</node>
	<node id="id" address="0x0" description="ID register" tags="slave"/>
	<node id="csr" address="0x2" size="0x2" description="ctrl/stat register" tags="slave">
		<node id="ctrl" address="0x0">
			<node id="nuke" mask="0x1"/>
			<node id="uc_sel" mask="0x2"/>
			<node id="clk40_rst" mask="0x4"/>
			<node id="clk40_sel" mask="0x8"/>
			<node id="pp_data_sel" mask="0x10"/>
			<node id="chan_sel" mask="0x030000"/>
			<node id="quad_sel" mask="0x7c0000"/>
			<node id="pp_sel" mask="0x3f000000"/>
		</node>
		<node id="stat" address="0x1">
			<node id="clk40_lock" mask="0x1" parameters="type=boolean"/>
			<node id="clk40_stop" mask="0x2" parameters="type=boolean"/>
			<node id="debug" mask="0xff00"/>
		</node>
	</node>
